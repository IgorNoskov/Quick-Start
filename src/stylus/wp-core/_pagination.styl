.pagination,
.comments-pagination
  font-size $font-size-base * 1.2

  .nav-links
    display: flex
    flex-wrap: wrap

  .page-numbers
    border: 0
    height: 40px
    margin: 0 5px 0 0
    padding: 5px
    text-align: center
    text-decoration: none

    &.next,
    &.prev
      padding: 5px 10px

    &.current,
    &:not(.dots):hover
      background-color: $accent-color
      color: #fff

  .page-numbers:not(.prev):not(.next)
    width: 40px

  .page-numbers:last-child
    margin: 0
