.primary-navigation
  background-color: $primary-color
  get-card-box-shadow()
  height: 100%
  left: -100%
  list-style: none
  overflow: auto
  position: fixed
  padding-top: 60px
  top: 0
  transition: all .2s ease-out
  width: 300px
  z-index: 100001 /* more than admin bar */

  &.active
    left: 0

  .nav-list
    margin: 0
    padding: 0
    list-style: none

    .menu-item
      position: relative

      &.current-menu-item > a
        background: $accent-color
        color: #fff

      a
        color: $primary-text-color
        display: block
        padding: 10px 40px 10px 15px
        text-transform: uppercase
        text-decoration: none

        &:hover
          background: $accent-color
          color: #fff

      .sub-menu
        background: $primary-color
        height: 100%
        max-width: 300px
        margin: 0
        left: -100%
        list-style: none
        overflow-y: auto
        position: fixed
        padding: 60px 0 0 0
        top: 0
        transition: all .2s ease-out
        width: 100%
        z-index: 1

        &.active
          left: 0

    .menu-item-has-children
      position: relative

  &__btn-close
    background-color: darken($primary-color, 20%)
    border-color: @background-color
    font-size: $font-size-base * 2
    height: 40px
    line-height: 1
    position: absolute
    padding: 0
    right: 0
    top: 0
    width: 40px

.menu-item__button
  font-size: $font-size-base * 2
  height: 40px
  line-height: 0
  padding: 10px
  position: absolute
  top: calc(50% - 20px)
  right: 0

.sub-menu__button
  background-color: darken($primary-color, 20%)
  border-color: @background-color
  font-size: $font-size-base * 2
  height: 40px
  line-height: 1
  position: absolute
  padding: 0
  right: 0
  top: 0
  width: 40px

@media screen and (min-width: 992px)
  .primary-navigation
    box-shadow: none
    background-color: transparent
    overflow: visible
    padding: 0
    position: static
    width: auto
    z-index: 0

    .nav-list
      display: flex
      flex-wrap: wrap

      > .menu-item:not(:last-child)
        margin-right: 5px

      .menu-item

        a
          padding: 10px 15px

        &:hover > .sub-menu
          get-card-box-shadow()
          display: block
          position: absolute
          height: auto
          padding: 0
          top: auto
          left: 30px
          z-index: 1

        .sub-menu
          display: none
          left: 0
          min-width: 200px
          overflow: visible

      .menu-item-has-children > a
        position: relative
        padding: 10px 25px 10px 15px

        &::after
          content: 'â€º'
          font-size: $font-size-base * 1.4
          line-height: 1
          position: absolute
          right: 10px
          top: calc(50% - 0.8rem)

    &__btn-close
      display: none

  .menu-item__button,
  .sub-menu__button
    display: none
