// Colors.
$primary-color = #f5f5f5
$accent-color = #03A9F4

// Fonts.
$font-family-base = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
$font-family-monospace = SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace
$font-size-base = 1rem
$line-height-base = 1.5

$primary-text-color = #212121
$secondary-text-color = #757575

// Screen reader text.
$screen-reader-text-background-color = $primary-color
$screen-reader-text-color = $primary-text-color

// Space.
$space = $font-size-base

// Body.
$body-background-color = #fff

//Container
$container-max-width = 1240px

// Headings.
$headings-margin-bottom = $space
$headings-font-family = inherit
$headings-font-weight = 500
$headings-line-height = 1.2
$headings-color = inherit
$h1-font-size = $font-size-base * 2.5
$h2-font-size = $font-size-base * 2
$h3-font-size = $font-size-base * 1.75
$h4-font-size = $font-size-base * 1.5
$h5-font-size = $font-size-base * 1.25
$h6-font-size = $font-size-base

// Paragraph.
$paragraph-margin-bottom = $space

// Link.
$link-color = $accent-color
$link-color-hover = darken($link-color, 20%)

// Columns.
$columns = (100% 50% 33.33% 25% 20% 16.66% 14.28% 12.5% 11.11%)

// Input.
$input-border-color = darken($primary-color, 20%)
$input-color = $secondary-text-color
$input-border-color-focus = darken($input-border-color, 20%)

// Button.
$button-padding = 0.563rem 1rem
$button-border-radius = 1px

// Primary Button.
$button-primary-background-color = $primary-color
$button-primary-background-color-hover = darken($button-primary-background-color, 20%)
$button-primary-background-color-active = darken($button-primary-background-color, 30%)
$button-primary-background-color-focus = darken($button-primary-background-color, 20%)

$button-primary-border-color = $primary-color
$button-primary-border-color-hover = darken($button-primary-border-color, 20%)
$button-primary-border-color-active = darken($button-primary-border-color, 30%)
$button-primary-border-color-focus = darken($button-primary-border-color, 20%)

$button-primary-color = $primary-text-color
$button-primary-color-hover = $button-primary-color
$button-primary-color-active = $button-primary-color
$button-primary-color-focus = $button-primary-color

// Accent Button.
$button-accent-background-color = $accent-color
$button-accent-background-color-hover = darken($button-accent-background-color, 20%)
$button-accent-background-color-active = darken($button-accent-background-color, 30%)
$button-accent-background-color-focus = darken($button-accent-background-color, 20%)

$button-accent-border-color = $accent-color
$button-accent-border-color-hover = darken($button-accent-border-color, 20%)
$button-accent-border-color-active = darken($button-accent-border-color, 30%)
$button-accent-border-color-focus = darken($button-accent-border-color, 20%)

$button-accent-color = #fff
$button-accent-color-hover = $button-accent-color
$button-accent-color-active = $button-accent-color
$button-accent-color-focus = $button-accent-color

// Outline Button.
$button-outline-background-color = transparent
$button-outline-background-color-hover = $accent-color
$button-outline-background-color-active = darken($accent-color, 20%)
$button-outline-background-color-focus = $accent-color

$button-outline-border-color = $accent-color
$button-outline-border-color-hover = $accent-color
$button-outline-border-color-active = darken($accent-color, 20%)
$button-outline-border-color-focus = $accent-color

$button-outline-color = $accent-color
$button-outline-color-hover = #fff
$button-outline-color-active = #fff
$button-outline-color-focus = #fff
