// Get Clearfix.
get-clearfix()
  content ""
  display table
  table-layout fixed

// Get Clearfix after.
get-clearfix-after()
  clear: both

// Get Card box shadow.
get-card-box-shadow()
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
          0 3px 1px -2px rgba(0, 0, 0, 0.12),
          0 1px 5px 0 rgba(0, 0, 0, 0.2)

// Get Button styles.
get-button-styles()
  border-radius: $button-border-radius
  display: inline-block
  font-size: $font-size-base * 0.75
  font-weight: 400
  line-height: 1.5
  outline: none
  padding: $button-padding
  text-align: center
  text-transform: uppercase
  user-select: none
  vertical-align: middle

  &:not(:disabled)
    cursor: pointer

// Get Primary Button styles.
get-primary-button-styles()
  border: 1px solid $button-primary-border-color
  background-color: $button-primary-background-color
  color: $button-primary-color

  &:hover
    background-color: $button-primary-background-color-hover
    border-color: $button-primary-border-color-hover
    color: $button-primary-color-hover

  &:active
    background-color: $button-primary-background-color-active
    border-color: $button-primary-border-color-active
    color: $button-primary-color-active

  &:focus
    background-color: $button-primary-background-color-focus
    border-color: $button-primary-border-color-focus
    color: $button-primary-color-focus

// Get Accent Button styles.
get-accent-button-styles()
  border: 1px solid $button-accent-border-color
  background-color: $button-accent-background-color
  color: $button-accent-color

  &:hover
    background-color: $button-accent-background-color-hover
    border-color: $button-accent-border-color-hover
    color: $button-accent-color-hover

  &:active
    background-color: $button-accent-background-color-active
    border-color: $button-accent-border-color-active
    color: $button-accent-color-active

  &:focus
    background-color: $button-accent-background-color-focus
    border-color: $button-accent-border-color-focus
    color: $button-accent-color-focus

// Get Outline Button styles.
get-outline-button-styles()
  border: 1px solid $button-outline-border-color
  background-color: $button-outline-background-color
  color: $button-outline-color

  &:hover
    background-color: $button-outline-background-color-hover
    border-color: $button-outline-border-color-hover
    color: $button-outline-color-hover

  &:active
    background-color: $button-outline-background-color-active
    border-color: $button-outline-border-color-active
