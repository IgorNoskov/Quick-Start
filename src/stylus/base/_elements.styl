:root
  box-sizing: border-box

*,
*::before,
*::after
  /* Inherit box-sizing to make it easier to change the property for components that leverage other behavior; see https://css-tricks.com/inheriting-box-sizing-probably-slightly-better-best-practice/ */
  box-sizing: inherit

body
  /* Fallback for when there is no custom background color defined. */
  background-color: $body-background-color
  color: $primary-text-color
  font-size: $font-size-base
  font-family: $font-family-base
  line-height: $line-height-base

h1,
h2,
h3,
h4,
h5,
h6
  color: $headings-color
  clear: both
  font-family: $headings-font-family
  font-weight: $headings-font-weight
  line-height: $headings-line-height
  margin-top: 0
  margin-bottom: $headings-margin-bottom

for num in (1..6)
  &h{num}
    font-size: lookup('$h' + num + '-font-size')

p
  margin-top: 0
  margin-bottom: $paragraph-margin-bottom

hr
  background-color: darken($primary-color, 20%)
  border: 0
  height: 1px
  margin-bottom: $font-size-base

abbr,
acronym
  border-bottom: 1px dotted $primary-color
  cursor: help

address
  margin: 0 0 $space

ul,
ol
  margin: 0 0 $space 0.5rem

ul
  list-style: disc

ol
  list-style: decimal

li > ul
li > ol
  margin-bottom: 0
  margin-left: 0.5rem

dt
  font-weight: 700

dd
  margin: 0 0 $space 0.5rem

blockquote
  background: $primary-color
  border-radius: 1px
  margin: 0 0 $space
  padding: 15px

  p:last-child
    margin-bottom: 0

dfn,
cite,
em,
i
  font-style: italic

b,
strong
  font-weight: 700

small
  font-size: 80%

big
  font-size: 125%

sub,
sup
  position: relative
  font-size: 75%
  line-height: 0
  vertical-align: baseline

sub
  bottom: -.25em

sup
  top: -.5em

a
  color: $link-color

  &:hover
    color: $link-color-hover

  &:focus
    outline: 0

  &:not([href]):hover,
  &:not([href]):focus
    color: inherit

pre
  background: $primary-color
  font-family: $font-family-monospace
  font-size: 0.9375rem
  line-height: 1.6
  margin-top: 0
  margin-bottom: $space
  overflow: auto
  padding: 0.5rem

code,
kbd,
tt,
var
  font-family: $font-family-monospace
  font-size: 0.9375rem

mark,
ins
  background: #fff9c0
  text-decoration: none

figure
  margin: 0 0 $space

img
  height: auto
  max-width: 100%
  vertical-align: middle

svg
  overflow: hidden
  vertical-align: middle

table
  border-collapse: collapse
  margin: 0 0 $space
  width: 100%

  thead th
    border-bottom: 2px solid darken($primary-color, 20%)
    vertical-align: bottom

  td,
  th
    border-top: 1px solid darken($primary-color, 20%)
    padding: .75rem

  caption
    color: $secondary-text-color
    caption-side: bottom
    padding-top: 0.75rem
    padding-bottom: 0.75rem

label
  display: inline-block
  margin-bottom: $font-size-base / 2

button,
input[type="button"],
input[type="reset"],
input[type="submit"]
  get-button-styles()
  get-accent-button-styles()

input[type="text"],
input[type="email"],
input[type="url"],
input[type="password"],
input[type="search"],
input[type="number"],
input[type="tel"],
input[type="range"],
input[type="date"],
input[type="month"],
input[type="week"],
input[type="time"],
input[type="datetime"],
input[type="datetime-local"],
input[type="color"],
textarea,
select
  border: 1px solid $input-border-color
  border-radius: 1px
  color: $input-color
  display: block
  font-size: $font-size-base
  line-height: 1.5
  padding: 0.375rem 0.75rem
  width: 100%

  &:focus
    border-color: $input-border-color-focus
    outline: 0

  &:disabled
    background-color: $primary-color

input[type="file"]
  display: block
  width: 100%

textarea
  resize: vertical;
